{
  "roots": [
    "<rootDir>/src"
  ],
  "testMatch": [
    "**/__tests__/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "moduleNameMapper": {
    "src(.*)$": "<rootDir>/src/$1",
    "import.meta.env": "<rootDir>/.env"
  },
  "globalSetup": "<rootDir>/src/tests/setupEnv.ts"
}